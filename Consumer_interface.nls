
to Consumer_i_setup
  ask consumers[
    set size 10 
    set shape "person"
    setxy random (600) 600
    ]          
end

to Consumer_i_update
  ask consumers[
    if purchase > 0 [
      setxy ([xcor] of best_producer - 2 + random-float(15)) ([ycor] of best_producer + random-float([quantity_sold] of best_producer / 3))
    ]
  ]
end